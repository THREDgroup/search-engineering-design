@article{ ISI:000440936700001,
Author = {Goehlich, Dietmar and Fay, Tu-Anh and Jefferies, Dominic and Lauth,
   Enrico and Kunith, Alexander and Zhang, Xudong},
Title = {{Design of urban electric bus systems}},
Journal = {{DESIGN SCIENCE}},
Year = {{2018}},
Volume = {{4}},
Month = {{AUG 7}},
Abstract = {{Many public transport authorities have a great interest in introducing
   zero-emission electric buses. However, the transformation process from
   diesel to electric bus systems opens up a vast design space which seems
   prohibitive for a systematic decision making process. We present a
   holistic design methodology to identify the most suitable system
   solution' under given strategic and operational requirements. The
   relevant vehicle technologies and charging systems are analysed and
   structured using a morphological matrix. A modular simulation model is
   introduced which takes technical and operational aspects into account.
   The model can be used to determine a feasible electric bus system. The
   technology selection is based on a detailed economic analysis which is
   conducted by means of a total cost of ownership (TCO) model. To cope
